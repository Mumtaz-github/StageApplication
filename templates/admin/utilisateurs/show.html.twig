{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block body %}
<div class="container mt-5">
	<h1 class="text-center mb-4 mt-5">Utilisateurs</h1>

<div class="card">
<div class="card-header bg-primary text-white text-center">
<strong>Détails de Utilisateurs</strong>
</div>
<div class="card-body p-0">
<div class="table-responsive">
	<table class="table table-bordered table-hover table-striped mb-0">
  <thead class="table-light">
  <tr>
  <th>ID</th>
  <th>Nom</th>
  <th>Prenom</th>
  <th>CodePostal</th>
  <th>Ville</th>
  <th>Email</th>
  <th>Role</th>
  <th>DateInvitation</th>
  <th>Password</th>
   </tr>
   </thead>

		<tbody>
			<tr>
				
				<td>{{ utilisateur.id }}</td>
				<td>{{ utilisateur.nom }}</td>
				<td>{{ utilisateur.prenom }}</td>
				<td>{{ utilisateur.codepostal }}</td>
				<td>{{ utilisateur.ville }}</td>
				<td>{{ utilisateur.email }}</td>
				<td>{{ utilisateur.role }}</td>
				<td>{{ utilisateur.dateInvitation ? utilisateur.dateInvitation|date('Y-m-d H:i:s') : '' }}</td>
				<td>{{ utilisateur.password }}</td>
			</tr>
		</tbody>
	</table>
  </div>

<div class="d-flex justify-content-between p-3">
	<a href="{{ path('app_utilisateurs_index') }}" class="btn btn-outline-success"> ←  Retour à la liste</a>

	<a href="{{ path('app_utilisateurs_edit', {'id': utilisateur.id}) }}" class="btn btn-outline-primary">✎ Modifier</a>

	{{ include('admin/utilisateurs/_delete_form.html.twig') }}
  </div>
  </div>
  </div>
  </div>
 
{% endblock %}
