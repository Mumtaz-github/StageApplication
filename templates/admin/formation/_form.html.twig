{% block body %}
<div class="container mt-3 mb-3" style="max-width: 900px; background-color:rgb(53, 67, 70); margin: 0 auto; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px;">
    <div class="row justify-content-center text-white">
        {{ form_start(form) }}

        <h2 class="text-center mb-4">{{ button_label|default('Créer une Formation') }}</h2>

        {# Actif checkbox shown as switch #}
        <div class="form-check form-switch mb-4">
            {{ form_widget(form.actifFormation, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(form.actifFormation, 'Formation Active', {'label_attr': {'class': 'form-check-label text-white'}}) }}
            {{ form_errors(form.actifFormation) }}
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.nom, 'Nom de la formation', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la formation'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.numero, 'Numéro', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Numéro'}}) }}
                {{ form_errors(form.numero) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.formateurs, 'Formateurs', {'label_attr': {'class': 'form-label text-white'}}) }}
            {{ form_widget(form.formateurs, {
                'attr': {
                    'class': 'form-select',
                    'multiple': true,
                    'size': 5
                }
            }) }}
            {{ form_errors(form.formateurs) }}
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateDebut) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateFin) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.dateDebutValidation, 'Date début validation', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.dateDebutValidation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateDebutValidation) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.dateFinValidation, 'Date fin validation', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.dateFinValidation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateFinValidation) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.niveau) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.titreProfessionnel, 'Titre Professionnel', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.titreProfessionnel, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titreProfessionnel) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.nombreHeures, 'Nombre d\'heures', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.nombreHeures, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nombreHeures) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.NombreStagiaires, 'Nombre de stagiaires', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.NombreStagiaires, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.NombreStagiaires) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.groupeRattachement, 'Groupe de rattachement', {'label_attr': {'class': 'form-label text-white'}}) }}
                {{ form_widget(form.groupeRattachement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.groupeRattachement) }}
            </div>
        </div>
     
<div class="text-center">
    <div class="d-flex justify-content-between mt-0 mb-0 flex-wrap gap-2">
        <a href="{{ path('app_formation_index') }}" class="btn btn-primary px-4 mt-4">
            ← Retour à la liste
        </a>

        <button class="btn btn-success px-5 py-2 mt-4">
            {{ button_label|default('Enregistrer') }}
        </button>
         {{ form_end(form) }} {# the form was below the first two buttion, i brought delete button from edit twig#}
      
	{# This block assumes 'formation' is passed in — only show delete if it's defined and has an ID #}
	{% if formation is defined and formation.id is not null %}
		{{ include('admin/formation/_delete_form.html.twig', { formation: formation }) }}
	{% endif %}
    </div>
</div>




