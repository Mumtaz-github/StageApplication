{% extends 'base.html.twig' %}

{% block title %}PeriodEnEntreprise index
{% endblock %}

{% block body %}
<div class="container mt-5">

	<h1 class="text-center mb-4">PeriodEnEntreprise index</h1>

<div class="card">
<div class="card-header bg-primary text-white text-center">
<strong>Périodes entregistrées</strong>
</div>
<div class="card-body p-0">
<div class="table-responsive">


	<table class="table table-bordered table-hover table-striped mb-0">
		<thead class="table-light text-center">
			<tr>
				<th>Id</th>
				<th>Date_debut</th>
				<th>Date_fin</th>
				<th>Nombre Heures</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody class="text-center">
			{% for period_en_entreprise in period_en_entreprises %}
				<tr>
					<td>{{ period_en_entreprise.id }}</td>
					<td>{{ period_en_entreprise.dateDebut ? period_en_entreprise.dateDebut|date('Y-m-d') : '' }}</td>
					<td>{{ period_en_entreprise.dateFin ? period_en_entreprise.dateFin|date('Y-m-d') : '' }}</td>
					<td>{{ period_en_entreprise.numbreHeures }}</td>
				
			<td class="text-center">
  <div class="d-flex justify-content-center gap-2">

						<a href="{{ path('app_period_en_entreprise_show', {'id': period_en_entreprise.id}) }}" class="btn btn-sm btn-outline-info">
                <i class="bi bi-eye"></i> Voir</a>
						<a href="{{ path('app_period_en_entreprise_edit', {'id': period_en_entreprise.id}) }}" class="btn btn-sm btn-outline-warning">
               <i class="bi bi-pencil"></i> Éditer</a>
                </div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
</div>
</div>
<div class="text-center mt-4">


	<a href="{{ path('app_period_en_entreprise_new') }}" class="btn btn-success">+ Créer une nouvelle période
  </a>
  </div>
  </div>
{% endblock %}
