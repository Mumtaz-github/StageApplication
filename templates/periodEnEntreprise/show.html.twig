{% extends 'base.html.twig' %}

{% block title %}Période en entreprise{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 mt-5">Détail de la période en entreprise</h1>

    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <strong>Détail de la PériodeEnEntreprise</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Formation</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ period_en_entreprise.id }}</td>
                            <td>{{ period_en_entreprise.dateDebut ? period_en_entreprise.dateDebut|date('d/m/Y') : '' }}</td>
                            <td>{{ period_en_entreprise.dateFin ? period_en_entreprise.dateFin|date('d/m/Y') : '' }}</td>
                            <td>{{ period_en_entreprise.formation ? period_en_entreprise.formation.nom : 'Non spécifiée' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between p-3">
                <a href="{{ path('app_period_en_entreprise_index') }}" class="btn btn-outline-success">	← Retour à la liste</a>
                <a href="{{ path('app_period_en_entreprise_edit', {'id': period_en_entreprise.id}) }}" class="btn btn-outline-primary">✎ Modifier</a>
                {{ include('periodEnEntreprise/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

