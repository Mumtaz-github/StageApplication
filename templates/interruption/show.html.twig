{% extends 'base.html.twig' %}

{% block title %}Interruption{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 900px;">
    <h1 class="mb-4 text-center">Interruption</h1>

    <table class="table table-striped table-bordered table-hover shadow-sm">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ interruption.id }}</td>
            </tr>
            <tr>
                <th scope="row">Date début</th>
                <td>{{ interruption.dateDebut ? interruption.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th scope="row">Date fin</th>
                <td>{{ interruption.dateFin ? interruption.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="{{ path('app_interruption_index') }}" class="btn btn-primary">
            ← Back to list
        </a>

        <a href="{{ path('app_interruption_edit', {'id': interruption.id}) }}" class="btn btn-warning">
            Edit
        </a>

        {# {{ include('interruption/_delete_form.html.twig') }} #}
        {{ include('interruption/_delete_form.html.twig', { 'button_label': 'Delete', 'button_attr': {'class': 'btn btn-danger'} }) }}

    </div>
</div>
{% endblock %}

