<style>
    .table {
        table-layout: fixed;
        width: 100%;
        border-collapse: collapse; /* remove double borders */
        box-shadow: 0 2px 8px rgba(0,0,0,0.1); /* subtle shadow */
    }
    .table th, .table td {
        width: 16.66%;
        text-align: center;
        vertical-align: middle;
        padding: 0.75rem 1rem;
        border: 1px solid #dee2e6; /* light border */
        word-wrap: break-word;
    }
    .table thead th {
        background-color: #f8f9fa; /* light gray header */
        border-bottom: 2px solid #adb5bd; /* thicker border under header */
    }
    .table tbody tr:hover {
        background-color: #e9f5ff; /* subtle blue hover effect */
        cursor: pointer;
    }
    .btn-group a.btn {
        min-width: 60px; /* make action buttons uniform size */
    }
</style>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date</th>
                <th scope="col">Année</th>
                <th scope="col">Zone</th>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for jour_ferie in jour_feries %}
                <tr>
                    <td>{{ jour_ferie.id }}</td>
                    <td>
                        {% if jour_ferie.date is not null %}
                            {{ jour_ferie.date|date('d/m/Y') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>{{ jour_ferie.annee }}</td>
                    <td>{{ jour_ferie.zone }}</td>
                    <td>{{ jour_ferie.nom }}</td>
                    <td>
                        <div class="btn-group" role="group">
						<a href="{{ path('app_jour_ferie_show', {'id': jour_ferie.id}) }}" class="btn btn-info rounded-pill">Voir</a>
						<a href="{{ path('app_jour_ferie_edit', {'id': jour_ferie.id}) }}" class="btn btn-warning rounded-pill">Modifier</a>


							{#   <a href="{{ path('app_jour_ferie_show', {'id': jour_ferie.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_jour_ferie_edit', {'id': jour_ferie.id}) }}" class="btn btn-sm btn-warning">Modifier</a>#}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun jour férié trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
