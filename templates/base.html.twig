<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        {% block title %}Welcome!{% endblock %}
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('asset/css/style.css') }}">

    <!-- Gantt Chart CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frappe-gantt@0.6.4/dist/frappe-gantt.min.css">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
    {% include "_partials/nav.html.twig" %}

    <main class="container py-4">
        {% block body %}{% endblock %}
    </main>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Gantt Chart JS -->
    <script src="https://cdn.jsdelivr.net/npm/frappe-gantt@0.6.4/dist/frappe-gantt.min.js"></script>

    <!-- Your Custom JavaScript -->
   {% block javascripts %}
    {% if day_width is defined and start_date is defined and end_date is defined %}
    <script>
        window.ganttConfig = {
            dayWidth: {{ day_width }},
            startDate: "{{ start_date|date('Y-m-d') }}",
            endDate: "{{ end_date|date('Y-m-d') }}"
        };
    </script>
    {% endif %}

    <script src="{{ asset('asset/javascript/scripts.js') }}"></script>

    {% block importmap %}
        {{ importmap('app') }}
    {% endblock %}
{% endblock %}

</body>
</html>
