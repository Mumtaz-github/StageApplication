{% extends 'base.html.twig' %}

{% block title %}Invitation{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 mt-5">Invitation</h1>


<div class="card">
<div class="card-header bg-primary text-white text-center">
<strong>Détail de l'invitation</strong>
</div>
<div class="card-body p-0">
<div class="table-responsive">
<table class="table table-bordered table-hover table-striped mb-0">
<thead class="table-light">

<tr>
<th>Id</th>
<th>Email</th>
<th>Token</th>
<th>ExpiresAT</th>
<th>Used</th>
</tr>
</thead>
  
        <tbody>
          
                <td>{{ invitation.id }}</td>
       
                <td>{{ invitation.email }}</td>
          
                <td>{{ invitation.token }}</td>
       
                <td>{{ invitation.expiresAT ? invitation.expiresAT|date('Y-m-d H:i:s') : '' }}</td>
         
                <td>{{ invitation.used ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-between p-3">
    <a href="{{ path('app_invitation_index') }}" class="btn btn-outline-success px-3 py-2 mt-4">
   ← Retour à la liste</a>

    <a href="{{ path('app_invitation_edit', {'id': invitation.id}) }}" class="btn btn-outline-primary px-4 py-2 mt-4">
 ✎ Modifier</a>

    {{ include('invitation/_delete_form.html.twig') }}
    </div>
</div>
</div>
</div>
{% endblock %}
