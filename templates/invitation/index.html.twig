{% extends 'base.html.twig' %}

{% block title %}Invitation index
{% endblock %}

{% block body %}
	<h1 class="text-center mt-4 mb-4">Invitation index</h1>

	<div class="card">
<div class="card-header bg-primary text-white text-center">
<h3>Invitation Lists</h3>
</div>
<div class="card-body p-0">
<div class="table-responsive">

<table class="table table-bordered table-hover table-striped mb-0">
<thead class="table-light text-center">
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Token</th>
				<th>ExpiresAT</th>
				<th>Used</th>
				<th>actions</th>
			</tr>
		</thead>

		<tbody class="text-center"> 
			{% for invitation in invitations %}
				<tr>
					<td>{{ invitation.id }}</td>
					<td>{{ invitation.email }}</td>
					<td>{{ invitation.token }}</td>
					<td>{{ invitation.expiresAT ? invitation.expiresAT|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ invitation.used ? 'Yes' : 'No' }}</td>

				<td class="text-center">
          <div class="d-flex justify-content-center gap-2">
						<a href="{{ path('app_invitation_show', {'id': invitation.id}) }}" class="btn btn-sm btn-outline-info">
            <i class="bi bi-eye"></i> Voir</a>

						<a href="{{ path('app_invitation_edit', {'id': invitation.id}) }}" class="btn btn-sm btn-outline-warning">
          <i class="bi bi-pencil"></i> Éditer</a>
          </div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
</div>
</div>
<div class="d-flex justify-content-center my-2">
  <a href="{{ path('app_invitation_new') }}" class="btn btn-success" style="width: 300px;">
    Créer une nouvelle invitation
  </a>
</div>
  </div>
</div>
{% endblock %}
